@{
    ViewBag.Title = "Mi cuenta";
}

<br />
<div class="row mr-2 ml-2">
    <div class="col">
        <div class="card">
            <div class="card-header"><i class="fa fa-align-justify"></i> Mi cuenta</div>

            <div class="card-body">
                <div class="row">

                </div>

                <ul class="nav nav-tabs" id="myTab1" role="tablist">
                    <li class="nav-item"><a class="nav-link active" id="datos1-tab" data-toggle="tab" href="#datos1" role="tab" aria-controls="datos1" aria-selected="true">Listar <span id="badge1" class="badge badge-pill badge-info">1ro</span></a></li>
                </ul>
                <br />

                <!--Tab lista de datos-->
                <div class="tab-content" id="myTab1Content">
                    
                    <div class="tab-pane fade show active" id="datos2" role="tabpanel" aria-labelledby="datos2-tab">
                        <div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtUsuario">Usuario</label>
                                        <input type="text" class="form-control" id="txtUsuario" aria-describedby="txtClienteId" placeholder="Usuario">
                                        <small id="msg_txtUsuario" class="errorMsg"></small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtEmail">Email</label>
                                        <input type="email" class="form-control" id="txtEmail" aria-describedby="txtEmail" placeholder="Email">
                                        <small id="msg_txtEmail" class="errorMsg"></small>
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtRol">Rol</label>
                                        <input type="text" class="form-control" id="txtRol" aria-describedby="txtRol" placeholder="Rol">
                                        <small id="msg_txtRol" class="errorMsg"></small>
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="txtEstado">Estado</label>
                                        <input type="text" class="form-control" id="txtEstado" aria-describedby="txtEstado" placeholder="Estado">
                                        <small id="msg_txtEstado" class="errorMsg"></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Tab creacion-->
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" id="btnGuardar" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i>Guardar</button>
                <button type="submit" id="btnEliminarCuenta" class="btn btn-sm btn-danger"><i class="fa fa-dot-circle-o"></i>Eliminar cuenta</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Root/Js/Usuario/MyAccount.js"></script>
}



